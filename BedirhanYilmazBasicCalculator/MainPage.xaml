<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BedirhanYilmazBasicCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Basic Calculator">

    <VerticalStackLayout Padding="24" Spacing="16">

        <Entry x:Name="NumberEntry"
               Placeholder="Enter number"
               Keyboard="Numeric"
               FontSize="20" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="+" Clicked="OnAddClicked" />
            <Button Text="-" Clicked="OnSubtractClicked" />
            <Button Text="ร" Clicked="OnMultiplyClicked" />
            <Button Text="รท" Clicked="OnDivideClicked" />
        </HorizontalStackLayout>

        <Button Text="=" Clicked="OnEqualsClicked" FontSize="22" />

        <Label x:Name="ResultLabel"
               FontSize="24"
               TextColor="Black" />

    </VerticalStackLayout>
</ContentPage>
